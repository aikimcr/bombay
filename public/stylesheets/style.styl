container-width = 1000px
container-height = 700px

text-color = white
base-color = black
main-border-color = #3f8c83
panel-background-color = #b8dfda
panel-text-color = black
stripe-color-even = #fefeea
stripe-color-odd = #ecedd3
table-header-background-color = #1f4641
table-header-color = #dceeec
dialog-background-color = panel-background-color
dialog-message-background-color = table-header-background-color
dialog-message-color = table-header-color

body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: base-color
  color: text-color

.navigation
  background-color: panel-background-color
  color: panel-text-color
  padding: 0 10px 0 10px
  border: 1px solid main-border-color
  display: inline-block
  border-radius: 10px 10px 0 0
  width: 240px
  height: 31px
  vertical-align:top
  position: absolute
  top: 5px
  right: 257px
  z-index: 1
  div
    display: block
    text-align: left
    display: inline-block

.band_selector
  padding-bottom: 10px
  display: inline-block
  div
    padding: 5px
    display: inline-block
  div, a
    padding: 5px
    display: inline-block

.app_container
  width: container-width
  height: container-height
  position: relative
  display: inline-block

// app_context styles
.app_context
  position: relative

.app_context > a
  text-decoration: none
  color: panel-text-color
  float: left
  padding: 5px 10px 5px 10px
  border: 2px solid main-border-color
  margin-right: 10px
  position: static
  border-radius: 10px 10px 0 0

.app_context:not(:target) > a
  background-color: base-color
  color: text-color
  z-index: 0

.app_context:target > a
  background-color: panel-background-color
  border-bottom-color: panel-background-color
  color: panel-text-color
  z-index: 0

.app_context > div
  background-color: panel-background-color
  z-index: 2
  left: 0
  top: 29px
  bottom: 0
  right: 0
  padding: 20px
  border 1px solid main-border-color
  position: absolute
  overflow: hidden
  height: 640px
  border-radius: 0 0 10px 10px

.app_context:not(:target) > div
  z-index: -1

.app_context:target > div
  z-index: 0

// app_context_item styles
.app_context_item
  padding: 10px
  color: panel-text-color

.app_context_item > div
  position: absolute
  top: 10px

.app_context_item > .form
  left: 10px

.app_context_item > .table
  right 10px

.app_context_item .creator
  margin-bottom: 10px

.app_context_item .display
  font-size: 120%
  

  .filters
    font-size: 90%
    border-style: solid
    border-width: 1px
    margin: 5px 0 5px 0

    .sort
      border-style: solid
      border-width: 1px
      display: inline-block
      padding: 1px

    .filter
      border-style: solid
      border-width: 1px
      display: inline-block
      padding: 1px

//
.container > input[id*="editor"]:checked ~ div.editor
  display: block

.container > input[id*="editor"]:not(:checked) ~ div.editor
  display: none

.container > input[id*="creator"]:checked ~ div.creator
  display: block

.container > input[id*="creator"]:not(:checked) ~ div.creator
  display: none

.container > input[id*="display"]:checked ~ div.display
  display: block

.container > input[id*="display"]:not(:checked) ~ div.display
  display: none

.container > input[id*="creator"]:checked ~ div.display >div.list
  height: 520px

.container > input[id*="creator"]:not(:checked) ~ div.display >div.list
  height: 600px
  
//
.editor
  overflow: auto
  width: 900px
  height:50px

  div > div.add
    display: block

  div > div.new
    display: none

  input:checked ~ div.add
    display: none

  input:checked ~ div.new
    display: block

.creator
  overflow: auto
  width: 900px
  height:30px

  div > div.new
    display: block

.display
  width: 860px

  .list
    overflow: auto
    width: 840px
    height: 630px
  
    table
      border-style: solid
      border-color: main-border-color
      border-width: 1px;
  
    tr:nth-child(even)
      background-color: stripe-color-even
  
    tr:nth-child(odd)
      background-color: stripe-color-odd
  
    th
      padding: 5px 5px 0 10px
      border-style none solid solid none
      border-width 0 1px 5px 0
      background-color: table-header-background-color
      color: table-header-color
  
    td
      padding: 10px 5px 0 10px
      border-style: none solid none none
      border-width: 0 1px 0 0
  
    th, td
      text-align: left
  
    th:last-child, td:last-child
      text-align: left
      border-right-style: none
      border-right-width: 0

#band_members .creator input[name="name"]
  width: 100px

#band_members .creator input[name="full_name"]
  width: 300px

#band_members .creator input[type="submit"]
  width: 50px

#band_members .list_table th:nth-child(1), .band_member .list table td:nth-child(1)
  width: 100px;

#band_members .list_table th:nth-child(2), .band_member .list table td:nth-child(2)
  width: 300px;

#band_members .list_table th:nth-child(3), .band_member .list table td:nth-child(3)
  width: 50px;

// Dialog classes
.dialog_background
  width: container-width
  height: container-height
  top: 0
  left: 0
  position: absolute
  z-index: 100

  .dialog_box
    width: 300px;
    height: 300px;
    top: (container-height / 2) - @height
    left: (container-width / 2) - (@width / 2)
    position: absolute
    background-color: dialog-background-color
    border-style: solid
    border-color: main-border-color
    border-radius: 10px
    padding: 20px

    .dialog_message
       width: 260px
       height: 220px
       background-color: dialog-message-background-color
       color: dialog-message-color
       border-radius: 10px
       padding: 20px
       margin-bottom: 10px

    .dialog_buttons
       width: 300px
       height: 30px

       .dialog_button
          background-color: dialog-message-background-color
          color: dialog-message-color
          display: inline-block
          width: 75px
          height: 20px
          border-style: solid
          border-color: main-border-color
          border-radius: 5px
          padding: 10px

       .dialog_button:first-child
          margin-left: 10px
          margin-right: 40px