form(name="person")
  table(cellpadding="0", cellspacing="0")
    tr
      td.editor_label Old Password
      td
        input(type="password", name="old_password", placeholder="Old Password")
    tr
      td.editor_label New Password
      td
        input(type="password", name="new_password", placeholder="New Password")
    tr
      td.editor_label Verify New Password
      td
        input(type="password", name="verify_new_password", placeholder="Verify New Password", disabled)
    tr
      td.editor_label User Name
      td
        input(type="text", name="name", value="#{person.name}")
    tr
      td.editor_label Full Name
      td
        input(type="text", name="full_name", value="#{person.full_name}")
    tr
      td.editor_label E-Mail
      td
        input(type="email", name="email", value="#{person.email}")

  input(type="submit", value="Save Changes")
  input(type="reset", value="Defaults");