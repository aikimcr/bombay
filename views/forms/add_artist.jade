div#add_artist_form(data-bind="visible: forms.add_artist.isVisible")
  div.dialog_background
    div.dialog
      div.title_bar
        div.title Add Artist
        div.close_button
          button.close_button(data-bind="click: forms.add_artist.hide.bind(forms.add_artist)") X

      div.dialog_body
        form(data-bind="submit: function() { Form.postChange(forms.add_artist, artists); }")
          input(data-bind="value: forms.add_artist.name", type="text", placeholder="New Artist Name")
          input(type="submit", value="Add")
