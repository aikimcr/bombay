div#add_band_member_form(data-bind="visible: forms.add_band_member.isVisible")
  div.dialog_background
    div.dialog
      div.title_bar
        div.title Add Band Member
        div.close_button
          button.close_button(data-bind="click: forms.add_band_member.hide.bind(forms.add_band_member)") X

      div.control
        button.edit_button(id="add_people", data-bind="click: forms.add_person.show.bind(forms.add_person)") +
        label(for="add_people") Add Person

      div.dialog_body
        form(data-bind="submit: function() { Form.postChange(forms.add_band_member, band_members); }")
          select(data-bind="options: $root.non_band_members, value: forms.add_band_member.person, optionsText: 'full_name'")
          input(type="submit", value="Add")
