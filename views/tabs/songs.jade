div.app_context(id="songs", data-bind="visible: $root.current_tab().value == 6")
  div.app_context_header Songs
  div.app_context_item
    div.display
      div.control
        button.edit_button(id="add_songs", data-bind="click: forms.add_song.show.bind(forms.add_song)") +
        label(for="add_songs") Add Song

      div.filters
        table
          thead
            tr
              th Sort Type
              th Filters

          tbody
            tr
              td
                div.sort(data-bind="with: songs")
                  select(data-bind="value: sort_type, options: sort_compare_labels, optionsText: 'label', optionsValue: 'value'")

              td
                div.filter(data-bind="with: songs.filter_values")
                  div.filter_label Song Name
                  input(type="text", data-bind="value: name, valueUpdate: 'afterkeydown'")

                div.filter(data-bind="with: songs.filter_values")
                  div.filter_label Artist
                  div(data-bind="searchableSelect: artist_id, optionsList: $root.artists.list, optionsText: 'name', optionsValue: 'id', optionsCaption: '-All Artists-'")
              
                div.filter(data-bind="with: songs.filter_values")
                  div.filter_title Band Count
                  div
                    div.filter_label Min
                    input(type="number", inputmode="numeric", data-bind="value: minimum_band_count, valueUpdate: 'afterkeydown'")

                  div
                    div.filter_label Max
                    input(type="number", inputmode="numeric", data-bind="value: maximum_band_count, valueUpdate: 'afterkeydown'")

      div.list
        table
          thead
            tr
              th
              th Name
              th Artist Name
              th Key
              th Bands
              th

          tbody(data-bind="foreach: songs.filtered_list")
            tr
              td(data-bind="click: $root.edit_table_object.bind($root.forms.edit_song)") &#x270e;
              td(data-bind="text: name")
              td(data-bind="text: artist().name")
              td
                select(name="key_signature", data-bind="value: key_signature, options: manager.key_signature_map, optionsText: 'value_text', optionsValue: 'value', event: { change: $root.update_table_object }")
              td(data-bind="text: band_count")
              td(data-bind="ifnot: band_count")
                button.edit_button(data-bind="click: $root.delete_table_object") -
