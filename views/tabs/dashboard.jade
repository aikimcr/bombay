div.app_context(id="dashboard", data-bind="visible: $root.current_tab().value == 0")
  div.app_context_header Dashboard
  div.app_context_item
    div.display
      div.control

      div.filters(style="display: none")
        table
          thead
            tr
              th Sort Type
              th Filters

          tbody
            tr
              td
                div.sort

              td
                div.filter

              
      div.list
        div.title Requests
        div.title(data-bind="text: request_msg")
        table
          thead
            tr
              th
              th Time
              th Person
              th Band
              th Type
              th Status

          tbody(data-bind='foreach: current_requests')
            tr
              td
                div(data-bind="visible: actions_list().length")
                  select(data-bind="options: actions_list, optionsText: 'label', optionsValue: 'value', optionsCaption: '-Select Action-'")
                  button.edit_button(id="request_action", data-bind="click: $root.send_request_action") Submit

              td(data-bind="text: timestamp")
              td(data-bind="text: person_name()")
              td(data-bind="text: band_name()")
              td(data-bind="text: pretty_request_type()")
              td(data-bind="text: pretty_status()")
