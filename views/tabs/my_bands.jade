div.app_context(id="my_bands", data-bind="visible: $root.current_tab().value == 3")
  div.app_context_header Bands
  div.app_context_item
    div.display(data-bind="if: current_person()")
      div.control
        //- button.edit_button(id="join_bands", data-bind="click: forms.join_band.show.bind(forms.join_band)") +
        //- label(for="join_bands") Join Band

      div.filters(data_bind="with: current_person().bandMemberList().views.person_bands")
        table
          thead
            tr
              th Sort Type
              th Filters

          tbody
            tr
              td
                div.sort(data-bind="with: sort")
                  select(data-bind="value: sort_type, options: labels, optionsText: 'label', optionsValue: 'value'")

              td
                div.filter(data-bind="with: filters.band_name")
                  div.filter_label Name
                  input(type="text", data-bind="value: filter_value, valueUpdate: 'afterkeydown'")
              
      div.list
        table
          thead
            tr
              th Name
              th

          tbody(data-bind="foreach: current_person().bandMemberList")
            tr
              td(data-bind="text: band().name")
              td
                button.edit_button(data-bind="click: $root.delete_table_object") -
