section.app_context(id="artists")
  a(href="#artists") Artists
  div.app_context_item
    div.display
      div.control
        button.edit_button(id="add_artists", data-bind="click: forms.add_artist.show.bind(forms.add_artist)") +
        label(for="add_artists") Add Artist

      div.filters
        table
          thead
            tr
              th Sort Type
              th Filters

          tbody
            tr
              td
                div.sort
                  select(data-bind="options: artists.sort_compare_labels, value: artists.sort_type, optionsText: 'label', optionsValue: 'value'")

              td
                div.filter
                  label(for="artists_name_filter") Name
                  input(name="artists_name_filter", type="text", data-bind="value: artists.filter_values.name, valueUpdate: 'afterkeydown'")
              
      div.list
        table
          thead
            tr
              th
              th Name
              th Song Count
              th

          tbody(data-bind="foreach: artists.filtered_list")
            tr
              td(data-bind="click: $root.edit_table_object.bind($root.forms.edit_artist)") &#x270e;
              td(data-bind="text: name")
              td(data-bind="text: song_count")
              td(data-bind="ifnot: song_count")
                button.edit_button(data-bind="click: $root.delete_table_object") -
